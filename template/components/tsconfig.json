{
  "compilerOptions": {
    "module":           "commonjs",
    "target":           "es6",
    "outDir":           "dist",
    "moduleResolution": "node",
    "declaration":      true,
    "allowJs":          false,
    "skipLibCheck":     true,
    "esModuleInterop":  true,
    "jsx":              "react-jsx",
    "lib":              [
      "es2019", "dom"
    ]
  },
  "include":          ["src/**/*.ts", "src/**/*.tsx", "index.ts", "index.tsx"],
  "exclude":         ["dist", "node_modules"]
}