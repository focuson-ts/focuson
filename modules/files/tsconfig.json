{
  "compilerOptions": {
    "module": "esnext",
    "target": "es6",
    "outDir": "dist",
    "moduleResolution": "node",
    "declaration": true,
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "lib": [
      "es2019",
      "dom"
    ],
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "index.ts",
    "index.tsx"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}
